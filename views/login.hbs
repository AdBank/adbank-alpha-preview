                <input type="password" class="form-control2" id="password" placeholder="Password">
              </div>
            </div><br>
            <div class="form-group"> 
              <div class="col-sm-offset-2 col-sm-10 text-center">
                <button class="btn2 btn2-default" onclick="login(); myFunction()">Login</button>
              </div>
            </div>
          </div>
        </div>
