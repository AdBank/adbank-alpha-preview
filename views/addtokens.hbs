<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="apple-touch-icon" sizes="76x76" href="/images/apple-icon.png">
        <link rel="icon" type="image/png" sizes="96x96" href="/images/favicon.png">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <title>adbank</title>
        <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
        <meta name="viewport" content="width=device-width" />
        <!-- Bootstrap core CSS     -->
        <link href="/css/bootstrap.min.css" rel="stylesheet" />
        <!--  Paper Dashboard core CSS    -->
        {{!-- <link href="/css/paper-dashboard.css" rel="stylesheet"/> --}}
        <!--  CSS for Demo Purpose, don't include it in your project     -->
        <link href="{{theme}}" rel="stylesheet" type="text/css" id="dark"/>
        <!--  Fonts and icons     -->
        <link href="/css/font-awesome.min.css" rel="stylesheet">
        <link href="/css/themify-icons.css" rel="stylesheet">
         <link href="/stylesheets/toastr.css" rel="stylesheet">
         <script>
                if(!localStorage.getItem("tokenCOOMS"))
                location.reload();
        </script>
    </head>
    <body>
        <div class="wrapper">
            <div class="sidebar" data-background-color="white" data-active-color="warning">
                <div class="sidebar-wrapper">
                    <div class="logo">
                        <a href="/dashboard" >
                            <img src="/images/g72.png"/>
                        </a>
                    </div>
                    <ul class="nav">
                        <li>
                            <a href="/dashboard">
                                <i class="eye-icon"></i>
                                <p>VIEW CAMPAIGNS</p>
                            </a>
                        </li>
                        <li>
                            <a href="/createCampaign">
                                <i class="plus-icon"></i>
                                <p>CREATE CAMPAIGN</p>
                            </a>
                        </li>
                        <li class="active">
                            <a href="/addTokens">
                            <i class="tokenred-icon"></i>
                                <p>ADD TOKENS</p>
                            </a>
                        </li>
                        <li>
                            <a href="/accountDetails">
                                <i class="user-icon"></i>
                                <p>ACCOUNT DETAILS</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="main-panel">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar bar1"></span>
                                <span class="icon-bar bar2"></span>
                                <span class="icon-bar bar3"></span>
                            </button>
                        </div>
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav navbar-right">
                                <li class="text-center">
                                    <a onclick="logout()" style="top:4px; cursor:pointer"> LOGOUT</a>
                                </li>
                                <li class="text-center">
                                    <a onclick="theme()" style="margin-right: 22px;cursor:pointer">
                                    <img src="/images/black.png" class="imgA1 img-style4">
                                    <img src="/images/white.png" class="imgB1 img-style4">
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <div class="container-fluid">
                    <div class="row row-margin">
                        <div class="col-lg-12 col-sm-12  screen">
                            <div class="col-lg-6 col-sm-6">
                                <div class="content">
                                    <div class="row">
                                        <div class="col-xs-4 text-right">        
                                                <i><img src="/images/tokenred.png"></i>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                                TOKENS
                                        </div>
                                        <div class="col-xs-4 text-left">
                                                {{user.token}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-6">
                                <div class="content">
                                    <div class="row">
                                        <div class="col-xs-4 text-right">        
                                                <i><img src="/images/eyered.png" style="margin-top: -4px;"></i>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                                CAMPAIGNS
                                        </div>
                                        <div class="col-xs-4 text-left">
                                                {{cmp}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row">                        
                        <div class="col-lg-12 col-sm-12">
                            <div class="card">
                                <div class="content">
                                    <div class="form-horizontal">
                                        <div class="form-group"> 
                                            <label class="control-label col-sm-1"></label>
                                            <div class="col-sm-8 font-color" style="font-size:16px;">
                                            ADD TOKENS 
                                            </div>
                                        </div>    
                                        <div class="form-group">    
                                            <label class="control-label  col-sm-1"></label>
                                            <div class="col-sm-8 red-line2">
                                            </div>
                                        </div><br>
                                        <div class="form-group">
                                            <label class="control-label col-sm-offset-1 col-sm-7" style="text-align:left;line-height: 20px;font-weight:normal;font-size:14px;">
                                               During the Alpha Preview phase, the system is being manually maintianed and veried by AdBank to ensure everyone has a good experience during this alpha testing. To load your account with tokens, please enter your public wallet key below and press "Send Request". Then send your tokens to our public wallet. We will then verify the transaction and load your account with your tokens. 
                                            </label>
                                            <label class="control-label col-sm-4" for="email" style="text-align:left;"></label>
                                        </div><br>
                                        <div class="form-group margin-bottom">
                                            <label class="control-label col-sm-3" for="email" style="text-align:right;">My Public Wallet Key</label>
                                            <div class="col-sm-4">
                                            <input type="password" class="form-control" placeholder="XXXX" name="email">
                                            </div>
                                            <label class="control-label col-sm-4" for="email" style="text-align:left;"></label>
                                        </div><br>  
                                        <div class="form-group margin-bottom">        
                                            <div class="col-sm-offset-3 col-sm-4" style="margin-top:10px;">
                                            <button type="submit" class="btn2 btn2-default">Send Request</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> 
        </div>    
    </body>
    <!--   Core JS Files   -->
    <script src="/javascripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="/javascripts/bootstrap.min.js" type="text/javascript"></script>
    <!-- Paper Dashboard Core javascript and methods for Demo purpose -->
    <script src="/javascripts/paper-dashboard.js"></script>
    <!-- Paper Dashboard DEMO methods, don't include it in your project! -->
    <script src="/javascripts/demo.js"></script>
    <script src="/javascripts/jquery.sharrre.js"></script>
    <script src="/javascripts/signOut.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.16.2/axios.js"></script>
    <script src="/javascripts/toastr.js"></script>
    <script>
         toastr.options = {
              "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "showDuration": "3000",
                "hideDuration": "3000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
         }
    </script> 
</html>
