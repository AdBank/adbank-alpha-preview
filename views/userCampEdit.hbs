<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
    	<link rel="apple-touch-icon" sizes="76x76" href="/images/apple-icon.png">
    	<link rel="icon" type="image/png" sizes="96x96" href="/images/favicon.png">
    	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    	<title>adbank</title>
    	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
        <meta name="viewport" content="width=device-width" />
        <!-- Bootstrap core CSS     -->
        <link href="/css/bootstrap.min.css" rel="stylesheet" />
        <!--  Paper Dashboard core CSS    -->
        {{!-- <link href="/css/paper-dashboard.css" rel="stylesheet"/> --}}
        <!--  CSS for Demo Purpose, don't include it in your project     -->
        <link href="{{theme}}" rel="stylesheet" type="text/css" id="dark"/>
        <!--  Fonts and icons     -->
        <link href="/css/font-awesome.min.css" rel="stylesheet">
        <link href="/css/themify-icons.css" rel="stylesheet">
        <link href="/stylesheets/toastr.css" rel="stylesheet">
        <script>
            if(!localStorage.getItem("tokenCOOMS"))
            location.reload();
        </script>
    </head>
    <body class="background" onload="chh()">
        <script src="/javascripts/signOut.js"></script>
            <div class="wrapper">
                <div class="sidebar" data-active-color="warning">
                    <div class="sidebar-wrapper">
                        <div class="logo">
                            <a href="/dashboard" >
                                <img src="/images/g72.png"/>
                            </a>
                        </div>
                        <ul class="nav">
                            <li>
                                <a href="/dashboard">
                                    <i class="eye-icon"></i>
                                    <p>VIEW CAMPAIGNS</p>
                                </a>
                            </li>
                            <li>
                                <a href="/createCampaign">
                                    <i class="plus-icon"></i>
                                    <p>CREATE CAMPAIGN</p>
                                </a>
                            </li>
                            <li>
                                <a href="/addTokens">
                                <i class="token-icon"></i>
                                    <p>ADD TOKENS</p>
                                </a>
                            </li>
                            <li>
                                <a href="/accountDetails">
                                    <i class="user-icon"></i>
                                    <p>ACCOUNT DETAILS</p>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="main-panel">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar bar1"></span>
                                    <span class="icon-bar bar2"></span>
                                    <span class="icon-bar bar3"></span>
                                </button>
                            </div>
                            <div class="collapse navbar-collapse">
                                <ul class="nav navbar-nav navbar-right">
                                    <li class="text-center">
                                        <a onclick="logout()" style="top:4px;cursor:pointer">LOGOUT</a>
                                    </li>
                                    <li class="text-center">
                                        <a onclick="theme()" style="margin-right: 22px;cursor:pointer">
                                            <img src="/images/black.png" class="imgA1 img-style4">
                                        <img src="/images/white.png" class="imgB1 img-style4">
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                     </nav>
                    <div class="container-fluid">
                        <div class="row row-margin">
                            <div class="col-lg-12 col-sm-12  screen">
                                <div class="col-lg-6 col-sm-6">
                                    <div class="content">
                                        <div class="row">
                                            <div class="col-xs-4 text-right">        
                                                <i><img src="/images/tokenred.png"></i>
                                            </div>
                                            <div class="col-xs-4 text-center">
                                                    TOKENS
                                            </div>
                                            <div class="col-xs-4 text-left">
                                                    {{user.token}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-sm-6">
                                    <div class="content">
                                        <div class="row">
                                            <div class="col-xs-4 text-right">        
                                                <i><img src="/images/eyered.png" style="margin-top: -4px;"></i>
                                            </div>
                                            <div class="col-xs-4 text-center">
                                                    CAMPAIGNS
                                            </div>
                                            <div class="col-xs-4 text-left">
                                                    {{user.campaigns}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="content">   
                        <div class="row">                        
                            <div class="col-xs-offset-2 col-xs-8 col-sm-offset-0 col-sm-12">
                                <div class="card">
                                    <div class="content">
                                        <div class="form-horizontal">
                                            <div class="form-group"> 
                                                <label class="control-label  col-sm-1"></label>
                                                <div class="col-sm-8 font-color" style="font-size:16px;letter-spacing: 1px;">
                                                EDIT CAMPAIGN 
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-1"></label>
                                                <div class="col-sm-10 red-line2">
                                                </div>
                                            </div>
                                            <div class="form-group margin-bottom">
                                                <label class="control-label  col-sm-3"></label>
                                                <div class="col-sm-4">
                                                    <label class="control-label  col-sm-2" style="margin-left: -15px;"/>
                                                    <div class="switch__container">
                                                        <input id="switch-flat" class="switch switch--flat" onchange="ch()" type="checkbox">
                                                        <label for="switch-flat"></label>
                                                        <div style="margin-top: -35px;margin-left: 52px;font-size:16px;font-weight: normal;"><div id="endis"></div></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group margin-bottom">
                                                <label class="control-label col-sm-offset-1 col-sm-2">Name</label>
                                                <div class="col-sm-4">
                                                    <input type="text" class="form-control textbox-style" id="name" value="{{camps.name}}"  placeholder="Name">
                                                </div>
                                            </div>  
                                            <div class="form-group margin-bottom">
                                                <label class="control-label col-sm-offset-1 col-sm-2">Total Spend</label>
                                                <div class="col-sm-2">          
                                                    <input type="number" class="form-control textbox-style" id="totalTokenSpend"  value="{{camps.totalTokenSpend}}" placeholder="Total Spend" name="spend">
                                                </div>
                                            </div>
                                            <div class="form-group margin-bottom">  
                                                <label class="control-label col-sm-offset-1 col-sm-2">Link Url</label>
                                                <div class="col-sm-4">          
                                                    <input type="text" class="form-control textbox-style" id="link"  value="{{camps.link}}" placeholder="Link Url" name="url">
                                                </div>
                                            </div>
                                            <div class="form-group margin-bottom">   
                                                <label class="control-label col-sm-offset-1 col-sm-2">Assets</label>
                                                <div class="col-sm-4">          
                                                    <input type="text" class="form-control textbox-style"  placeholder="336*280 / Large Rectangle" name="" disabled>
                                                </div>  
                                                <div class="col-sm-2">
                                                 <label for="largeRec">
                                                     <i class="ti-upload"></i>&nbsp<a href="#">Upload New</a>
                                                     <input type='file' id="largeRec" name="uploadImage" onchange="readURL(this);"  style="display:none" accept="image/*" />
                                                 </label>
                                                </div> 
                                                <div class="col-sm-2 font-color">
                                                 <img src="{{camps.LargeRec}}" alt="No Image" width="20px" height="20px" />
                                                </div>
                                            </div>
                                            <div class="form-group margin-bottom">   
                                                <label class="control-label col-sm-offset-1 col-sm-2"></label>
                                                <div class="col-sm-4">          
                                                    <input type="text" class="form-control textbox-style" placeholder="300*250 / Meduim Rectangle" name="" disabled>
                                                </div>  
                                                <div class="col-sm-2">  
                                                   <label for="MediumRec">
                                                     <i class="ti-upload"></i>&nbsp<a href="#">Upload New</a>
                                                     <input type='file' id="MediumRec" name="uploadImage" onchange="readURL1(this);" style="display:none" accept="image/*" />
                                                </label>
                                                </div> 
                                                <div class="col-sm-2 font-color">
                                                <img src="{{camps.MediumRec}}" alt="No Image" width="20px" height="20px" />	
                                                </div>
                                            </div>
                                            <div class="form-group margin-bottom">   
                                                <label class="control-label col-sm-offset-1 col-sm-2"></label>
                                                <div class="col-sm-4">          
                                                    <input type="text" class="form-control textbox-style" placeholder="LeaderBoard" name="" disabled>
                                                </div>  
                                                <div class="col-sm-2">  
                                                    <label for="leaderboard">
                                                      <i class="ti-upload"></i>&nbsp<a href="#">Upload New</a>
                                                      <input type='file' id="leaderboard" name="uploadImage" onchange="readURL2(this);" style="display:none" accept="image/*" />
                                                    </label>
                                                </div>
                                                <div class="col-sm-2 font-color">
                                                 <img src="{{camps.Leaderboard}}" alt="No Image" width="20px" height="20px" />
                                                </div>
                                            </div>
                                            <div class="form-group margin-bottom">   
                                                <label class="control-label col-sm-offset-1 col-sm-2"></label>
                                                <div class="col-sm-4">          
                                                    <input type="text" class="form-control textbox-style"  placeholder="300*600/Halfpage" name="" disabled>
                                                </div>  
                                                <div class="col-sm-2">  
                                                    <label for="halfPage">
                                                      <i class="ti-upload"></i>&nbsp<a href="#">Upload New</a>
                                                      <input type='file' id="halfPage" name="uploadImage" onchange="readURL3(this);" style="display:none" accept="image/*" />
                                                    </label>
                                                </div> 
                                                <div class="col-sm-2 font-color">
                                                  <img src="{{camps.halfpage}}" alt="No Image" width="20px" height="20px" />
                                                </div>
                                            </div>
                                            <div class="form-group margin-bottom">   
                                                <label class="control-label col-sm-offset-1 col-sm-2"></label>
                                                <div class="col-sm-4">          
                                                    <input type="text" class="form-control textbox-style"  placeholder="320*100/Large Mobile" name="" disabled>
                                                </div>  
                                                <div class="col-sm-2">  
                                                    <label for="LargeImage">
                                                      <i class="ti-upload"></i>&nbsp<a href="#">Upload New</a>
                                                      <input type='file' id="LargeImage" name="uploadImage" onchange="readURL4(this);" style="display:none" accept="image/*" />
                                                    </label>
                                                </div>
                                                <div class="col-sm-2 font-color"> 
                                                     <img src="{{camps.LargeImage}}" alt="No Image" width="10px" height="10px"/>
                                                </div>
                                            </div>
                                            <div class="form-group">        
                                                <div class="col-sm-offset-3 col-sm-4">
                                                    <button onclick="update()" id="sub"  class="btn2 btn2-default">Update Campaign</button>
                                                </div>
                                              <p id="ide" hidden>{{camps._id}}</p>
                                              <p id="sta" hidden>{{camps.status}}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
     </body>
    <!--   Core JS Files   -->
    <script src="/javascripts/jquery-1.10.2.js" type="text/javascript"></script>
	<script src="/javascripts/bootstrap.min.js" type="text/javascript"></script>
