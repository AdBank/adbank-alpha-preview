                location.reload();
        </script>
    </head>
    <body>
      <script src="/javascripts/adminLogout.js"></script>
        <div class="wrapper">
            <div class="sidebar" data-active-color="warning">
                <div class="sidebar-wrapper">
                    <div class="logo">
                        <a href="/adminUserCamp" >
                            <img src="/images/g72.png"/>
                        </a>
                    </div>
                    <ul class="nav">
                        <li>
                            <a href="/adminUserCamp">
                                <i class="users-icon"></i>
                                <p style="letter-spacing: 0px;">USERS & CAMPAIGNS</p>
                            </a>
                        </li>
                        <li>
                            <a href="/adminAccountDetails">
                                <i class="user-icon"></i>
                                <p>ACCOUNT DETAILS</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="main-panel">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar bar1"></span>
                                <span class="icon-bar bar2"></span>
                                <span class="icon-bar bar3"></span>
                            </button>
                        </div>
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav navbar-right">
                                <li class="text-center">
                                    <a onclick="adminLogout()" style="top:4px;cursor:pointer"> LOGOUT</a>
                                </li>
                                <li class="text-center">
                                    <a onclick="theme()" style="margin-right: 22px;cursor:pointer">
                                        <img src="/images/black.png" class="imgA1 img-style4">
                                    <img src="/images/white.png" class="imgB1 img-style4">
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                 </nav>
                <div class="container-fluid">
                    <div class="row row-margin">
                        <div class="col-md-offset-1 col-lg-12 col-sm-offset-1 col-sm-12  screen">
                                <div class="content">
                                    <ol class="breadcrumb">
                                     
                                        <li><a href="#">Administrator</a></li>
                                        <li><a style="color:#e92f26" href="#">User Account Details Edit</a></li>
                                        
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="content">
                    <div class="row">                        
                        <div class="col-xs-offset-2 col-xs-8 col-sm-offset-0 col-sm-12">
                            <div class="card">
                                <div class="content">
                                    <div class="form-horizontal">
                                        <div class="form-group"> 
                                            <label class="control-label  col-sm-1"></label>
                                            <div class="col-sm-8 font-color" style="font-size:16px;letter-spacing: 1px;">
                                            ACCOUNT DETAILS
                                            </div>
                                        </div>
                                        <div class="form-group"> 
                                            <label class="control-label  col-sm-1"></label>
                                            <div class="col-sm-8 red-line2">
                                            </div>
                                        </div>
                                        <div class="form-group margin-bottom">
                                            <label class="control-label col-sm-offset-1 col-sm-2" for="email">First Name</label>
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control textbox-style" id="firstname" value="{{user.firstname}}"  placeholder="First Name"   disabled>
                                            </div>
                                            <div class="col-sm-2 font-color">
                                                <i onclick="editfirst()" class="ti-pencil-alt"></i>
                                            </div>
                                        </div>
                                        <div class="form-group margin-bottom">  
                                            <label class="control-label col-sm-offset-1 col-sm-2" for="email">Last Name</label>
                                            <div class="col-sm-4">
                                                <input type="text" class="form-control textbox-style" id="lastname" value="{{user.lastname}}"  placeholder="last Name" disabled>
                                            </div> 
                                            <div class="col-sm-2 font-color">
                                                <i onclick="editlast()" class="ti-pencil-alt"></i>
                                            </div>
                                        </div>
                                        <div class="form-group margin-bottom">  
                                            <label class="control-label col-sm-offset-1 col-sm-2" for="pwd">Email</label>
                                            <div class="col-sm-4">          
                                                <input type="Email" class="form-control textbox-style" id="email" value="{{user.email}}"  placeholder="Email" disabled required="">
                                            </div>
                                            <div class="col-sm-2 font-color">
                                                <i class="ti-pencil-alt"></i>
                                            </div>
                                        </div>
                                        <div class="form-group margin-bottom">  
                                            <label class="control-label col-sm-offset-1 col-sm-2" for="pwd">Mobile No</label>
                                            <div class="col-sm-4">          
                                                <input type="number" class="form-control textbox-style" id="phone" value="{{user.phone}}"  placeholder="Mobile No." disabled>
                                            </div>
                                            <div class="col-sm-2 font-color">
                                                <i onclick="editphone()" class="ti-pencil-alt"></i>
                                            </div>
                                        </div>
                                        <div class="form-group margin-bottom">  
                                            <label class="control-label col-sm-offset-1 col-sm-2" for="pwd">Birthday</label>
                                            <div class="col-sm-4">          
                                                <input type="date" class="form-control textbox-style" id="birthday" value="{{user.birthday}}" placeholder="Date" disabled>
                                            </div>
                                            <div class="col-sm-2 font-color">
                                                <i onclick="editbirth()" class="ti-pencil-alt"></i>
                                            </div>
                                        </div>
                                        <div class="form-group margin-bottom">  
                                            <label class="control-label col-sm-offset-1 col-sm-2" for="pwd">Address</label>
                                            <div class="col-sm-4">          
                                                <input type="text" class="form-control textbox-style" id="address" value="{{user.address}}"  placeholder="Address" disabled>
                                            </div>
                                            <div class="col-sm-2 font-color">
                                                <i onclick="editaddress()"  class="ti-pencil-alt"></i>
                                            </div>
                                        </div>
                                        <div class="form-group margin-bottom">  
                                            <label class="control-label col-sm-offset-1 col-sm-2" for="pwd">City/Town</label>
                                            <div class="col-sm-4">          
                                                <input type="text" class="form-control textbox-style" id="city" value="{{user.city}}"  placeholder="City/Town" disabled>
                                            </div>
                                            <div class="col-sm-2 font-color">
                                                <i onclick="editcity()"  class="ti-pencil-alt"></i>
                                            </div>
                                        </div>
                                        <div class="form-group margin-bottom">  
                                            <label class="control-label col-sm-offset-1 col-sm-2" for="pwd">Province/State</label>
                                            <div class="col-sm-4">          
                                                <input type="text" class="form-control textbox-style" id="state" value="{{user.state}}"  placeholder="Province/State" disabled>
                                            </div>
                                            <div class="col-sm-2 font-color">
                                                <i onclick="editstate()"  class="ti-pencil-alt"></i>
                                            </div>
                                        </div>
                                        <div class="form-group margin-bottom">  
                                            <label class="control-label col-sm-offset-1 col-sm-2" for="pwd">Postal/Zip Code</label>
                                            <div class="col-sm-4">          
                                                <input type="number" class="form-control textbox-style" id="zip" value="{{user.zip}}"  placeholder="Postel/Zip Code" disabled>
                                            </div>
                                            <div class="col-sm-2 font-color">
                                                <i onclick="editzip()" class="ti-pencil-alt"></i>
                                            </div>
                                        </div>
                                        <div class="form-group margin-bottom">  
                                            <label class="control-label col-sm-offset-1 col-sm-2" for="pwd">Country</label>
                                            <div class="col-sm-4">          
                                                <input type="text" class="form-control textbox-style" id="country" value="{{user.country}}" placeholder="Country" disabled>
                                            </div>
                                            <div class="col-sm-2 font-color">
                                                <i onclick="editcountry()" class="ti-pencil-alt"></i>
                                            </div>
                                        </div><br>  
                                        <div class="form-group margin-bottom">
                                            <div class="control-label col-sm-offset-1 col-sm-2">
                                                <a href="/resPass/{{user.email}}" style="color:red">RESET PASSWORD</a>
                                            </div>
                                            <div class="col-sm-4">
                                                <button onclick="AdminuserAccountUpdate()" class="btn2 btn2-default">Update</button>
                                            </div>
                                        </div>       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> 
           </div>
       </div>
    </body>
